
@{
    ViewBag.Title = "Contact";
}
<div>
    <a href="/">Home</a>
    <a href="/Company/Services">Services</a>
    <a href="/Company/TeamsMember">Teams & Members</a>
    <a href="/Company/Contact">Contact</a>
